package rpsTest;

import static org.junit.Assert.*;

import org.junit.Test;

import rps.RPS;

public class RPSTest {
RPS rps = new RPS();
	@Test
	public void rockTest() {
	assertEquals("rock did not draw with rock", "draw", rps.game("rock"));
	}
	
	
	@Test
	public void paperTest() {
	assertEquals("paper did not beat rock", "win",  rps.game("paper"));
	}
	
	
	@Test
	public void scissorsTest() {
	assertEquals("scissors did not lose to rock", "lose",  rps.game("scissors"));
	}
}
